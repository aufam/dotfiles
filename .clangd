CompileFlags:
  Add: [-std=c++23, -Wall, -Wextra, -Wpedantic, -Wnull-dereference, -Wuse-after-move]

Index:
  StandardLibrary: false

Diagnostics:
  UnusedIncludes: Strict
  Suppress: [unknown-pragmas]
  ClangTidy:
    Add: [
      bugprone-*,
      clang-analyzer-nullability.*,
      modernize-*,
      performance-*,
    ]
    Remove: [
      modernize-use-trailing-return-type,
    ]

